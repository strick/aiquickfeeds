<% feedItems.forEach((item, index) => { %>
    <div class="article" id="<%= item.id %>" data-feed-index="<%= feedUrls.findIndex(feed => feed.title === item.feedTitle) %>">
        <h2><a href="<%= item.url %>"><%= item.title %></a></h2>
        <span class="article-date"><%= new Date(item.date).toDateString() %></span>
        <h3 class="feed-title"><%= item.feedTitle %></h3>                
        <ul>
        <% 
        item.summary.split('\n').forEach(line => { 
            if (line.trim().startsWith('-')) { 
        %>
            <li><%= line.trim().substring(2) %></li>
        <% 
            } else { 
        %>
            <p><%= line %></p>
        <% 
            } 
        }); 
        %>
        </ul>
        <button class="share-button" onclick="shareArticle('<%= item.id %>', '<%= item.title %>')">Share</button>
    </div>
<% }); %>
