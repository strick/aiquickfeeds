<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Quick Feeds</title> <!-- Use a variable for the title -->
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar section -->
        <button id="toggle-sidebar-btn" class="mobile-only">Toggle Feeds</button>
        <div class="sidebar">
            <h2>Feeds</h2>
            <button id="close-sidebar-btn" class="close-btn">Ã—</button> <!-- This is the close button -->
            <% feedUrls.forEach((feed, index) => { %>
                <p class="feed-toggle" data-feed-index="<%= index %>">
                    <i class="fas fa-eye toggle-icon"></i>
                    <%= feed.title %>
                </p>
            <% }); %>
        </div>



        <!-- Main content section -->
        <div class="container">
            <!-- Content will be inserted here -->
            <%- body %> 
        </div>
    </div>
    <!-- Footer Section -->
    <div class="footer">
        <p>Brian Strickland | <a href="mailto:bstrick@gmail.com">bstrick@gmail.com</a></p>
        <p>&copy; 2023 Brian Strickland. All rights reserved.</p>
    </div>

    <script>
        document.querySelectorAll('.feed-toggle').forEach(feedToggle => {
            feedToggle.addEventListener('click', () => {
                feedToggle.classList.toggle('inactive');
                const icon = feedToggle.querySelector('.toggle-icon');
                icon.classList.toggle('fa-eye');
                icon.classList.toggle('fa-eye-slash');
                // Toggle visibility of articles based on feed index
                const feedIndex = feedToggle.getAttribute('data-feed-index');
                document.querySelectorAll(`.article[data-feed-index="${feedIndex}"]`).forEach(article => {
                    article.style.display = article.style.display === 'none' ? '' : 'none';
                });
            });
        });

        document.getElementById('toggle-sidebar-btn').addEventListener('click', () => {
            const sidebar = document.querySelector('.sidebar');
            if (sidebar.style.display === 'none' || sidebar.style.display === '') {
                sidebar.style.display = 'block';
            } else {
                sidebar.style.display = 'none';
            }
        });

        document.getElementById('close-sidebar-btn').addEventListener('click', () => {
            document.querySelector('.sidebar').style.display = 'none';
        });

        document.addEventListener('click', (e) => {
            const sidebar = document.querySelector('.sidebar');
            const isClickInsideSidebar = sidebar.contains(e.target);
            const isClickOnToggleButton = e.target.id === 'toggle-sidebar-btn'; // Assuming you have this button for toggling.

            if (!isClickInsideSidebar && !isClickOnToggleButton && sidebar.style.display === 'block') {
                sidebar.style.display = 'none';
            }
        });

    </script>
    
    
</body>
</html>
